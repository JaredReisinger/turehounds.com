// config to generate types for Eleventy
{
  // "include": ["./src/**/*", "./*", "./.*"],
  "include": ["./node_modules/@11ty/**/*"],
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",

    // "rootDir": "./src",
    "rootDir": "./node_modules/@11ty",
    "outDir": "./@types/@11ty",

    "allowJs": true,
    "checkJs": false,

    // "removeComments": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    // "sourceMap": true,
    // "inlineSourceMap": true,

    // "esModuleInterop": true,
    // "forceConsistentCasingInFileNames": true,

    // "strict": true,

    "skipLibCheck": true
  }
}
