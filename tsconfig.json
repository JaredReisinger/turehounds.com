{
  "include": ["./src/**/*", "./*", "./.*", "./plugins/**/*", "./tools/**/*"],
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",

    "rootDir": ".",
    "outDir": "./_js",

    // include our generated/hand-coded types.
    // "typeRoots": ["@types", "node_modules/@types"],

    "allowJs": true, // for now...
    // "checkJs": true,
    "checkJs": false,

    "removeComments": true,
    "declaration": false,
    "declarationMap": false,
    // "sourceMap": true,
    // "inlineSourceMap": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    // "strict": true,

    "skipLibCheck": true
  }
}
