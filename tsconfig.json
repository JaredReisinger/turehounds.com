{
  "include": ["./src/**/*", "./*", "./.*"],
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",

    // "rootDir": "./src",
    "rootDir": ".",
    "outDir": "./_js",

    "allowJs": true, // for now...
    // "checkJs": true,
    "checkJs": false,

    "declaration": false,
    "declarationMap": false,
    // "sourceMap": true,
    // "inlineSourceMap": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    // "strict": true,

    "skipLibCheck": true
  }
}
